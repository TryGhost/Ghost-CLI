#!/usr/bin/env node
'use strict';

// provide a title to the process
process.title = 'ghost';

const argv = process.argv.slice(2);

if (argv.length === 0) {
    console.error('No command specified. Run `ghost help` for usage');
    process.exit(1);
}

const debug = require('debug')('ghost-cli:bin');

debug('Starting Ghost-CLI');

const yargs = require('yargs');
debug('args parser loaded');

const bootstrap = require('../lib/bootstrap');
debug('bootstrap loaded');

bootstrap.run(argv, yargs);

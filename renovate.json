{
  "extends": [
    "config:base",
    "group:jsTestMonMajor",
    "group:linters",
    ":maintainLockFilesMonthly",
    ":prHourlyLimitNone"
  ],
  "travis": { "enabled": true },
  "node": {
    "supportPolicy": ["lts"]
  },
  "major": {
    "automerge": false
  },
  "packageRules": [
    {
      "depTypeList": ["devDependencies"],
      "automerge": true,
      "automergeType": "branch"
    },
    {
      "groupName": "CLI Tools",
      "packageNames": ["chalk", "cli-table3", "inquirer", "listr", "log-symbols", "ora", "yargs"],
      "updateTypes": ["minor", "patch"],
      "automerge": true
    },
    {
      "groupName": "Well Known",
      "packageNames": ["debug", "fs-extra", "got", "lodash", "moment", "semver", "yarn"],
      "updateTypes": ["minor", "patch"],
      "automerge": true
    }
  ]
}

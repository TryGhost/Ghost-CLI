{
  "version": "independent",
  "npmClient": "yarn",
  "packages": ["packages/*"],
  "useWorkspaces": true,
  "command": {
    "publish": {
      "allowBranch": "main",
      "message": "chore(release): publish new versions",
      "conventionalCommits": true,
      "bump": "prerelease",
      "preid": "next",
      "preDistTag": "next",
      "noChangelog": true,
      "exact": true
    }
  },
  "local": {
    "public": true,
    "repo": "https://github.com/TryGhost/Ghost-CLI",
    "scope": "@tryghost"
  }
}

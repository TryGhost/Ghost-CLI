{
  "name": "ghost-cli",
  "version": "1.0.0-alpha.7",
  "description": "Just a CLI manager (for a blogging platform)",
  "author": "Ghost Foundation",
  "homepage": "http://ghost.org",
  "keywords": [
    "ghost",
    "cli"
  ],
  "files": [
    "bin",
    "lib"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/TryGhost/Ghost-CLI/"
  },
  "bugs": "https://github.com/TryGhost/Ghost-CLI/issues",
  "contributors": "https://github.com/TryGhost/Ghost-CLI/graphs/contributors",
  "license": "MIT",
  "main": "lib/cli.js",
  "bin": {
    "ghost": "./bin/ghost"
  },
  "scripts": {
    "coverage": "cat ./coverage/lcov.info | coveralls",
    "lint": "eslint bin lib",
    "test:unit": "istanbul cover _mocha --report lcovonly -- test/unit/**/*-spec.js",
    "test:acceptance": "mocha --timeout 10000 test/acceptance/**/*-spec.js",
    "test:all": "npm run test:unit && npm run test:acceptance",
    "test": "npm run lint && npm run test:all"
  },
  "engines": {
    "node": "~0.12.0 || ^4.2.0 || ^6.5.0"
  },
  "preferGlobal": true,
  "dependencies": {
    "bluebird": "3.4.6",
    "chalk": "1.1.3",
    "cli-cursor": "1.0.2",
    "cli-spinners": "0.3.0",
    "commander": "2.9.0",
    "core-object": "2.0.6",
    "fkill": "3.1.0",
    "fs-extra": "1.0.0",
    "inquirer": "1.2.2",
    "lodash": "4.16.6",
    "log-symbols": "1.0.2",
    "knex-migrator": "0.2.0",
    "npm": "2.15.11",
    "semver": "5.3.0",
    "symlink-or-copy": "1.1.6",
    "update-notifier": "1.0.2",
    "validator": "6.1.0"
  },
  "devDependencies": {
    "chai": "3.5.0",
    "coveralls": "2.11.15",
    "eslint": "3.9.0",
    "istanbul": "0.4.5",
    "mocha": "3.1.2",
    "mocha-lcov-reporter": "1.2.0",
    "rewire": "2.5.2",
    "sinon": "1.17.6"
  },
  "greenkeeper": {
    "ignore": [
      "npm",
      "fkill"
    ]
  }
}

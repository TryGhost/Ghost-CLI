{
  "name": "ghost-cli",
  "version": "1.0.0-alpha.9",
  "description": "Just a CLI manager (for a blogging platform)",
  "author": "Ghost Foundation",
  "homepage": "http://ghost.org",
  "keywords": [
    "ghost",
    "cli"
  ],
  "files": [
    "bin",
    "lib"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/TryGhost/Ghost-CLI/"
  },
  "bugs": "https://github.com/TryGhost/Ghost-CLI/issues",
  "contributors": "https://github.com/TryGhost/Ghost-CLI/graphs/contributors",
  "license": "MIT",
  "main": "lib/cli.js",
  "bin": {
    "ghost": "./bin/ghost"
  },
  "scripts": {
    "coverage": "cat ./coverage/lcov.info | coveralls",
    "lint": "eslint bin lib",
    "test:unit": "istanbul cover _mocha --report lcovonly -- test/unit/**/*-spec.js",
    "test:acceptance": "mocha --timeout 10000 test/acceptance/**/*-spec.js",
    "test:all": "yarn run test:unit && yarn run test:acceptance",
    "test": "yarn run lint && yarn run test:all"
  },
  "engines": {
    "node": "^4.2.0 || ^6.5.0"
  },
  "preferGlobal": true,
  "dependencies": {
    "bluebird": "3.4.7",
    "chalk": "1.1.3",
    "commander": "2.9.0",
    "execa": "0.5.0",
    "fkill": "3.1.0",
    "fs-extra": "2.0.0",
    "inquirer": "3.0.1",
    "knex-migrator": "2.0.4",
    "listr": "0.10.0",
    "lodash": "4.17.4",
    "npm": "2.15.11",
    "ora": "0.4.0",
    "semver": "5.3.0",
    "symlink-or-copy": "1.1.8",
    "update-notifier": "1.0.3",
    "validator": "6.2.1"
  },
  "devDependencies": {
    "chai": "3.5.0",
    "coveralls": "2.11.15",
    "eslint": "3.13.1",
    "istanbul": "0.4.5",
    "mocha": "3.2.0",
    "mocha-lcov-reporter": "1.2.0",
    "proxyquire": "1.7.11",
    "rewire": "2.5.2",
    "sinon": "1.17.6"
  },
  "greenkeeper": {
    "ignore": [
      "npm",
      "fkill"
    ]
  }
}
